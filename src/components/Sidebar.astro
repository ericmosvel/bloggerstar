---
import Linkedin from "./icons/Linkedin.astro"
import Github from "./icons/Github.astro"

---

<section>
    <div class="card-base w-full mx-auto p-2 mb-4">
       <div class="transition mb-2 p-2 flex justify-center max-w-[12rem] mx-auto lg:max-w-none">
         <img src="/public/avatar_2.webp" class="md:w-full md:h-full object-cover rounded-xl" alt="avatar">
       </div>
       <div class="px-2">        
        <div class="font-bold text-xl text-center mb-1 transition">Mosvel Dev</div>
        <div class="h-1 w-5 mx-auto bg-teal-400 rounded-full mb-2 transition"></div>
        <div class="text-center mb-2.5 transition-normal">
            Web Developer & SEO Specialist  Geek and Calistenict lover
        </div>
        <div class="flex justify-center gap-2 mb-1">
            <a href="#">
                <Linkedin class="size-7" />
            </a>
            <a href="#">
                <Github class="size-7" />
            </a>
        </div>
       </div>
    </div>
    <slot />
</section>




